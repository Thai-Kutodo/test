.loader-parent {
  position: relative;
}

.loader-container {
  display: flex;
  justify-content: center;
  align-items: center;
}
.loader-container:not(.loader-container--display) {
  display: none;
}
.loader-container.loader-container--absolute {
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.05);
}

.loader-spinner {
  display: initial !important;
  border: 16px solid #f3f3f3; /* Light grey */
  border-top: 16px solid #3498db; /* Blue */
  border-radius: 50%;
  width: 80px;
  height: 80px;
  animation: spin 2s linear infinite;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
.anyflexbox body,
#login-container.is-loading {
  display: block;
}

input[type=text], input[type=password], input[type=search],
#login-container .modal__content {
  box-sizing: border-box;
}

.modal__header,
.modal__content {
  border-bottom: none;
  padding: 0;
}

.step .step__sections > .section:first-child,
#stamped-conversion-tracker,
.step__footer[data-step-footer],
div[data-address-field=country],
.content-box .field__caret,
.step .section--reductions,
.section--billing-address .field__label,
#phone_tooltip,
.step .notice--info,
.step .notice--info + .section {
  display: none;
}

.checkout-loading {
  border: 5px solid #f3f3f3;
  border-top: 5px solid #3498db;
  border-radius: 50%;
  width: 45px;
  height: 45px;
  animation: spin 2s linear infinite;
  position: absolute;
  left: 50%;
  top: 50%;
  z-index: 10;
  transform: translate(-50%, -50%);
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
.step .step__sections {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", sans-serif;
  font-size: 1.4rem;
  line-height: normal;
}

.step .section--payment-method {
  padding-top: 0;
}

.section--billing-address {
  padding-top: 84px;
  font-family: var(--font-noto-sans);
}

.step .section--payment-method h4,
.section--billing-address h4,
.section--payment-method .radio__label__primary {
  font-family: var(--font-noto-sans);
}

.address-fields .field input.field__input::-webkit-input-placeholder {
  color: #aaaaaa;
}

.address-fields .field input.field__input::-moz-placeholder {
  color: #aaaaaa;
}

.address-fields .field input.field__input:-ms-input-placeholder {
  color: #aaaaaa;
}

.address-fields .field input.field__input:-moz-placeholder {
  color: #aaaaaa;
}

.section--billing-address .field .field__input {
  height: 54px;
  padding: 0 20px;
  font-size: 1.4rem;
  border: none;
  box-shadow: none;
}

.section--billing-address .field input.field__input {
  background: #fff;
}

.section--billing-address .field[data-address-field=province] {
  width: 100%;
}

#section--billing-address__different {
  background: #f5f5f5;
}

.section--billing-address .section__content .content-box,
.section--payment-method .section__content .content-box {
  border-color: #e5e5e5;
}

.note-field {
  padding-top: 0;
}

.find-address {
  height: 54px;
}

.field[data-address-field=last_name],
.field[data-address-field=first_name],
.field.last-name-kana,
.field.first-name-kana {
  width: 50%;
}

.checkout #full-page-overlay__processing-text h3.full-page-overlay__title {
  padding-bottom: 0;
  font-size: 1.4rem;
  color: #333333;
  border-bottom: none;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", sans-serif;
}

.checkout #full-page-overlay__processing-text p.full-page-overlay__text {
  font-size: 1.4rem;
  color: #545454;
  font-weight: 400;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", sans-serif;
}

.content-box .input-radio {
  background-color: #f2f2f2;
  border-color: #f2f2f2;
}

.content-box .input-radio:hover {
  background-color: #d7d7d7;
}

.input-checkbox:checked, .input-radio:checked,
.input-checkbox:checked:hover, .input-radio:checked:hover {
  border-color: #518fcc;
  background-color: #fff !important;
}

.input-radio:checked {
  border-width: 6px;
}

.input-checkbox, .input-radio {
  width: 20px;
  height: 20px;
}

.checkout__content h1.heading {
  font-family: var(--font-noto-sans);
}

.checkout__wrapper h1,
.checkout__wrapper h2,
.checkout__wrapper h3,
.checkout__wrapper h4 {
  font-family: var(--font-noto-sans);
}

body.is-presenting-modal, body.is-presenting-alert {
  overflow: hidden !important;
  touch-action: none;
}

.popup-back-prev-page {
  width: 210px;
}

.field--select-address .field__input-wrapper--select {
  border-bottom: 1px solid #e5e5e5;
  padding-bottom: 20px;
  margin-bottom: 8px;
}

.section--remember-me .section__title {
  font-size: 1.6rem;
  line-height: 160%;
  letter-spacing: 0.05em;
  color: var(--color-text-secondary);
}

.section--remember-me .content-box {
  border: none;
}

.section--remember-me .content-box > .content-box__row:first-child {
  padding: 0;
  padding-left: 16px;
  margin-bottom: 16px;
}

#section--billing-address__different .error {
  text-align: left;
  margin-top: 15px;
  color: #ff0000;
  padding: 0;
}

.section--billing-address .field input.field--error,
.section--billing-address .field select.field--error {
  border: 1px solid #ff0000;
}

#checkout_billing_address_province {
  pointer-events: none;
  background: #ececec;
  opacity: 0.7;
}

@media (min-width: 1080px) {
  .lg--pt-14 {
    padding-top: 14px;
  }
  .popup-back-prev-page {
    width: 400px;
  }
}
@media (max-width: 1079px) {
  .find-address {
    height: 40px;
  }
  .sm--pt-12 {
    padding-top: 12px;
  }
  .section--billing-address .field .field__input {
    height: 40px;
    font-size: 1.2rem;
  }
  .input-checkbox, .input-radio {
    width: 16px;
    height: 16px;
  }
  .input-radio:checked {
    border-width: 5px;
  }
  .section--billing-address,
  .section--remember-me {
    padding-top: 50px;
    font-family: var(--font-noto-sans);
    font-size: 1.2rem;
  }
  .section--remember-me .section__title {
    font-size: 1.2rem;
    line-height: 130%;
  }
}