<div class="feature-header--{{ request.locale.iso_code }}" data-lang="{{ request.locale.iso_code }}">
    <div class="{%- if request.locale.iso_code contains 'en' -%}page-header__hero{%-else-%}article__hero-image{%- endif -%}">
      {%- liquid
          assign img_banner_event = section.settings.banner_image 
        if request.locale.iso_code contains 'en'
          assign img_banner_event = section.settings.banner_image_en
        endif
      -%}

      <img class="lazy animated" data-src="{{ img_banner_event | image_url: width: 1500 }}">
    </div>
      {% if request.locale.iso_code contains 'ja' %}
        <div class="article__body article__body--has-no-margin">
          <p>{{ section.settings.header_text }}</p>
        </div>
      {% else %}
        <div class="page-header__description">{{ section.settings.header_text_en | remove: '<p></p>' }}</div>
      {% endif %}  
    <h2 class="article__sub-title {% if request.locale.iso_code contains 'en' %}hidden{% endif %}">
    {{ section.settings.header_title}}
    </h2>
    {% for block in section.blocks %}
    <div class="article__image lg:grid-cols-10 {% if request.locale.iso_code contains 'en' %}hidden{% endif %}">
        <div class="lg:col-span-7">
        <div class="article__image-container">
            <img class="lazy animated" data-src="{{ block.settings.image | image_url: width: 1500 }}">
        </div>
        </div>
        <div class="lg:col-span-3">
        <h3 class="article__h3 article__h3--has-only-margin-bottom">
            {{ block.settings.heading}}
        </h3>
        <div class="article__body">
            <p>{{ block.settings.text}}</p>
        </div>
        </div>
    </div>
    {% endfor %}
    <hr>
</div>


{% schema %}
{
  "name": "Event Feature",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "画像"
    },
    {
      "type": "image_picker",
      "id": "banner_image_en",
      "label": "画像 - En"
    },
    {
      "type": "text",
      "id": "header_title",
      "label": "Feature Page Title"
    },
    {
      "type": "textarea",
      "id": "header_text",
      "label": "Feature Page Header Text"
    },
    {
      "type": "richtext",
      "id": "header_text_en",
      "label": "Feature Page Header Text - En"
    }
  ],
  "max_blocks": 15,
  "blocks": [
    {
        "type": "sub-section",
        "name": "Sub-section",
        "settings": [
        {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ]
}
{% endschema %}