
<div id="template-search-specifying" class="container gap-20 lg:gap-40"> 
  {% render 'search-product' %}
  {% render 'scroll-tag-list' %}
  <hr>
  <div class="template-search search-wrap {% unless search.performed and search.results_count > 0 %} template-search--empty{% endunless %}">
    {% paginate collection.products by section.settings.products_per_page %}
      {% render 'search-results', paginate: paginate, typeFilter: 'collection' %} 
    {% endpaginate %}
  </div>
</div> 
{% schema %}
{
  "name": "t:sections.main-collection-product-grid.name",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "products_per_page",
      "min": 8,
      "max": 24,
      "step": 4,
      "default": 16,
      "label": "t:sections.main-collection-product-grid.settings.products_per_page.label"
    }
  ]
}
{% endschema %}