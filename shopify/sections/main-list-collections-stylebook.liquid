<input
  type="text"
  id="customer"
  data-id="{{ customer.id }}"
  data-email="{{ customer.email }}"
  data-product="{{ product.id }}"
  hidden />
<div class="stylebook__content">
  <div class="stylebook__tagged-content">
    <ul data-stylebook-collection-target="taggedControllerContent">
      {%- for collection in collections -%}
        {%- if collection.featured_image and collection.metafields.custom.parent.value contains "stylebook" -%}

          <li data-category="{{ collection.metafields.custom.category.value | handle }}" data-gender="{{ collection.metafields.custom.gender.value | handle }}">

            <a href="{{ collection.url | default: "#" }}" alt="{{ collection.handle }}">
              <img
                srcset="{%- if collection.featured_image.width >= 165 -%}
                {{ collection.featured_image | image_url: width: 165 }} 165w,{%- endif -%}
              {%- if collection.featured_image.width >= 330 -%}
                {{ collection.featured_image | image_url: width: 330 }} 330w,{%- endif -%}
              {%- if collection.featured_image.width >= 535 -%}
                {{ collection.featured_image | image_url: width: 535 }} 535w,{%- endif -%}
              {%- if collection.featured_image.width >= 750 -%}
                {{ collection.featured_image | image_url: width: 750 }} 750w,{%- endif -%}
              {%- if collection.featured_image.width >= 1000 -%}
                {{ collection.featured_image | image_url: width: 1000 }} 1000w,{%- endif -%}
              {%- if collection.featured_image.width >= 1500 -%}
                {{ collection.featured_image | image_url: width: 1500 }} 1500w,{%- endif -%}
              {%- if collection.featured_image.width >= 3000 -%}
                {{ card_cocollectionllection.featured_image | image_url: width: 3000 }} 3000w,{%- endif -%}
              {{ collection.featured_image | image_url }} {{ collection.featured_image.width }}w"
              src="{{ collection.featured_image | image_url: width: 1500 }}"
              alt="{{ collection.title | escape }}"
              height="{{ collection.featured_image.height }}"
              width="{{ collection.featured_image.width }}"
              loading="lazy"
              class="motion-reduce">
            </a>
          </li>

        {%- endif -%}
      {%- endfor -%}
    </ul>
    <div class="result-empty hiden">商品更新中です</div>
    <div class="stylebook__footer">
      <button class="button button--light button--has-icon-arrow-bottom" style="display: none;">もっとみる</button>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "t:sections.styleboook.mains.name",
    "class": "section-main-stylebook",
    "settings": [],
    "blocks": []
  }
{% endschema %}