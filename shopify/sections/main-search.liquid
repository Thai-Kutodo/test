
{%- liquid
  assign sort_by = search.sort_by | default: search.default_sort_by
  assign terms = search.terms | escape
  assign search_url = '?q=' | append: terms | append: '&options%5Bprefix%5D=last&sort_by=' | append: sort_by
-%}
<div id="template-search-specifying" class="container gap-20 lg:gap-40"> 
  {% render 'search-product' %}
  {% render 'scroll-tag-list' %}
  <hr>
  <div class="template-search search-wrap {% unless search.performed and search.results_count > 0 %} template-search--empty{% endunless %}">
    {%- if search.performed -%}
    {% paginate search.results by 24 %}
      {% render 'search-results', paginate: paginate, typeFilter: 'search' %} 
    {% endpaginate %}
    {%- endif -%}
  </div>
</div> 
{% schema %}
{
  "name": "t:sections.main-search.name",
  "tag": "section",
  "class": "section"
}
{% endschema %}
