                      <img alt="{{  block.settings.img_1_3.alt | default: 'STYLEBOOK' }}" data-src="{{ block.settings.img_1_3 | img_url: 'master' }}">
                    </div>
                  </a>
                </li>
              {% endif %}
            </ul>
          </div>
        {% endif %}

        {% when "type_2" %}
