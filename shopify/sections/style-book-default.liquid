<div class="stylebook__content" data-stylebook-collection-target="defaultContent">
  <div class="container gap-10 lg:gap-20" data-controller="gallery">
    {% for block in section.blocks %}

      {% case block.type %}
        {% when "type_1" %}
        {% if block.settings.reverse_block_1 == false %}
          <div class="stylebook-gallery stylebook-gallery__grid-a">
            <ul>
              {% if block.settings.img_1_1 %}
                <li>
                  <a href="{{ block.settings.link_1_1 | default: '#' }}" alt="{{ block.settings.link_1_1 | split: "/" | last | handle }}">
                    <div class="gallery__image">
                      <img alt="{{  block.settings.img_1_1.alt | default: 'STYLEBOOK' }}" data-src="{{ block.settings.img_1_1 | img_url: 'master' }}">
                    </div>
                  </a>
                </li>
              {% endif %}
              {% if block.settings.img_1_2 %}
                <li>
                  <a href="{{ block.settings.link_1_2 | default: '#' }}" alt="{{ block.settings.link_1_2 | split: "/" | last | handle }}">
