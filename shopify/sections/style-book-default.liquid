                  <a href="{{ block.settings.link_1_3 | default: '#' }}" alt="{{ block.settings.link_1_3 | split: "/" | last | handle }}">
                    <div class="gallery__image">
                      <img alt="{{  block.settings.img_1_3.alt | default: 'STYLEBOOK' }}" data-src="{{ block.settings.img_1_3 | img_url: 'master' }}">
                    </div>
                  </a>
                </li>
              {% endif %}
            </ul>
          </div>
        {% else %}
          <div class="stylebook-gallery stylebook-gallery__grid-a-reverse">
            <ul>
              {% if block.settings.img_1_1 %}
                <li>
                  <a href="{{ block.settings.link_1_1 | default: '#' }}" alt="{{ block.settings.link_1_1 | split: "/" | last | handle }}">
                    <div class="gallery__image">
                      <img alt="{{  block.settings.img_1_1.alt | default: 'STYLEBOOK' }}" data-src="{{ block.settings.img_1_1 | img_url: 'master' }}">
                    </div>
                  </a>
                </li>
              {% endif %}
