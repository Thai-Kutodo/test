 document.addEventListener('DOMContentLoaded', function(event) {
    const agreeBtn = document.getElementById('tos-agree-button');
    const termsTab = document.getElementById('register-terms');
    const emailTab = document.getElementById('register-email');

    const switchTabs = () => {
      termsTab.hidden = true;
      emailTab.hidden = false;
      document.body.scrollTop = document.documentElement.scrollTop = 0;
